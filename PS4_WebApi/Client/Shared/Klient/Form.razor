<EditForm Model="@kli" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Imie :</label>
        <div>
            <InputText @bind-Value="@kli.Imie" />
            <ValidationMessage For="@(() => kli.Imie)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Nazwisko :</label>
            <div>
                <InputText @bind-Value="@kli.Nazwisko" />
                <ValidationMessage For="@(() => kli.Nazwisko)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Email :</label>
            <div>
                <InputText @bind-Value="@kli.Email" />
                <ValidationMessage For="@(() => kli.Email)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Wiek :</label>
            <div>
                <InputNumber @bind-Value="@kli.Wiek" />
                <ValidationMessage For="@(() => kli.Wiek)" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>

</EditForm>


@code {
    [Parameter] public Klient kli { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Zapisz";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}